localhost {
    # Put most specific routes first
    handle /api/admin* {
        uri strip_prefix /api
        reverse_proxy backend:8000
    }

    handle /api/* {
        uri strip_prefix /api
        reverse_proxy backend:8000
    }

    handle /api {
        uri strip_prefix /api
        reverse_proxy backend:8000
    }

    handle {
        reverse_proxy frontend:3000
    }

    # Add some logging to help debug
    log {
        format console
        level DEBUG
    }
}
