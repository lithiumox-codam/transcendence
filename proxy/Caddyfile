localhost {
    # Serve Django static files
    handle_path /static/* {
        root * /srv/staticfiles
        file_server
    }

    # Django API routes
    handle /api/* {
        uri strip_prefix /api
        reverse_proxy backend:8000 {
            header_up X-Forwarded-Prefix /api
        }
    }

    # Catch-all for SvelteKit
    handle {
        reverse_proxy frontend:5173
    }
}
