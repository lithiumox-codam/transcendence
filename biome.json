{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": [
            "node_modules",
            ".svelte-kit/**",
            ".env*",
            ".turbo/**",
            "build/**"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "ignore": ["*.svelte"],
        "indentWidth": 4
    },
    "organizeImports": {
        "enabled": true,
        "ignore": ["*.svelte"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    },
    "overrides": [
        {
            "include": ["*.svelte"],
            "linter": {
                "rules": {
                    "style": {
                        "useConst": "off",
                        "useImportType": "off"
                    }
                }
            }
        }
    ]
}
